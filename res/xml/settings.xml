      <juloo.keyboard2.prefs.IntSlideBarPreference android:key="cgr_kappa" android:title="Îº (KAPPA) - End-Point Bias" android:summary="Higher for specific key positions (%s)" android:defaultValue="25" min="0" max="50"/>
      <juloo.keyboard2.prefs.IntSlideBarPreference android:key="cgr_pt_spacing" android:title="Point Spacing" android:summary="Progressive segment density (%s)" android:defaultValue="200" min="100" max="1000"/>
      <juloo.keyboard2.prefs.IntSlideBarPreference android:key="cgr_max_resampling" android:title="Max Resampling Points" android:summary="Maximum gesture complexity (%s)" android:defaultValue="5000" min="1000" max="10000"/>
    </PreferenceScreen>
    <PreferenceScreen android:key="cgr_template_settings" android:title="Template Generation Settings" android:summary="Configure QWERTY coordinate mapping and template generation" android:dependency="swipe_typing_enabled">
      <juloo.keyboard2.prefs.IntSlideBarPreference android:key="template_coord_scale" android:title="Coordinate Scale" android:summary="Template coordinate scaling factor (%s%%)" android:defaultValue="100" min="50" max="200"/>
